<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>
        <pluginName>DynamicDropdown</pluginName>
        <pluginNiceName>Dynamic Dropbox Module</pluginNiceName>
        <pluginDescription><![CDATA[Populate Comboboxes with Object content of a selected folder]]></pluginDescription>
        <!-- Plugin Server Host-->
        <pluginServer></pluginServer>
        <!-- Version and Revision are updated by createRevision Script !-->
        <pluginVersion>0.0.8</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>1336112744</pluginBuildTimestamp>
        <!-- <pluginIframeSrc>/plugin/DynamicDropdown/admin/settings</pluginIframeSrc> -->
        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>DynamicDropdown_Plugin</pluginClassName>
        <!-- include paths relative to plugin-directory -->
	<!-- css files needed for pimcore plugin (backend) with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/DynamicDropdown/static/css/admin.css</path>
        </pluginCssPaths>  				
        <pluginIncludePaths>
            <path>/DynamicDropdown/lib</path>
            <path>/DynamicDropdown/controllers</path>
        </pluginIncludePaths>
        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>DynamicDropdown</namespace>
        </pluginNamespaces>
        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/DynamicDropdown/static/js/DynamicDropdown/data/dynamicDropdown.js</path>
            <path>/DynamicDropdown/static/js/DynamicDropdown/data/dynamicDropdownMultiple.js</path>
            <path>/DynamicDropdown/static/js/DynamicDropdown/data/itemselector.js</path>
            <path>/DynamicDropdown/static/js/DynamicDropdown/data/superboxselect.js</path>
            <path>/DynamicDropdown/static/js/DynamicDropdown/tags/dynamicDropdown.js</path> 
            <path>/DynamicDropdown/static/js/DynamicDropdown/tags/dynamicDropdownMultiple.js</path>
            <path>/DynamicDropdown/static/js/DynamicDropdown/tags/itemselector.js</path>
            <path>/DynamicDropdown/static/js/DynamicDropdown/tags/superboxselect.js</path>
        </pluginJsPaths>

        <pluginJsPaths-extjs6>
            <path>/DynamicDropdown/static6/js/DynamicDropdown/data/dynamicDropdown.js</path>
            <path>/DynamicDropdown/static6/js/DynamicDropdown/data/dynamicDropdownMultiple.js</path>

            <path>/DynamicDropdown/static6/js/DynamicDropdown/tags/dynamicDropdown.js</path>
            <path>/DynamicDropdown/static6/js/DynamicDropdown/tags/dynamicDropdownMultiple.js</path>
        </pluginJsPaths-extjs6>
        <pluginCssPaths-extjs6>
            <path>/DynamicDropdown/static6/css/admin.css</path>
        </pluginCssPaths-extjs6>

        <pluginIcon>/plugins/DynamicDropdown/static/img/dynamicdropdown-logo.png</pluginIcon>
    </plugin>
</zend-config>
